PATH=$PATH:../common/bin

projects=()

function die {
  echo "$@" 1>&2;
  exit -1;
}

git submodule update --init || die "submodule update failed"

for project in "${projects[@]}"
do
  cd $project
  prepare_project ${project}.cfg || die "prepare_project failed for: $project"
  cd ..
done
